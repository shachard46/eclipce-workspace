package com.shachar.first;

import java.text.DecimalFormat;
import java.util.Collection;
import java.util.HashMap;
import java.util.Map;

public class Utils {
	public static double formatNumber(double num) {
		DecimalFormat df = new DecimalFormat( "#,###,###,##0.00" );
		return Double.valueOf(df.format(num));
	}
	
	public static void main(String[] args) {
		System.out.println(formatNumber(100));
		Map<String,Integer> answersCount = new HashMap<String, Integer>();
		int sum = sum(answersCount.values());
		System.out.println(sum);
	}
	public static int sum(Collection<Integer> numbers) {
		int sum = 0;
		for(int num : numbers) {
			sum += num;
		}
		return sum;
	}
}
